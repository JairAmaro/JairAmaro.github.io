---
const skills = [
  { src: "/assets/apachespark.png", alt: "SPARK" },
  { src: "/assets/Python.png", alt: "Python" },
  { src: "/assets/jupyter.png", alt: "JUPYTER" },
  { src: "/assets/git.png", alt: "Git" },
  // Agrega más...
];
---

<style>
.container {
  position: relative;
  width: 300px;
  height: 300px;
  margin: auto;
}

.center-photo {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.orbit {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 250px;
  height: 250px;
  transform: translate(-50%, -50%);
  animation: spin 20s linear infinite;
}

.skill {
  position: absolute;
  width: 40px;
  height: 40px;
}

.skill img {
  width: 100%;
  border-radius: 50%;
}

/* Posiciones circulares */
.skill:nth-child(1) { top: 0; left: 50%; transform: translateX(-50%); }
.skill:nth-child(2) { top: 20%; left: 85%; transform: translate(-50%, -50%); }
.skill:nth-child(3) { top: 70%; left: 90%; transform: translate(-50%, -50%); }
.skill:nth-child(4) { bottom: 0; left: 50%; transform: translateX(-50%); }
/* Agrega más posiciones según los elementos */

@keyframes spin {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}
</style>

<div class="container">
  <img class="center-photo" src="/assets/tu_foto.png" alt="Tu foto" />
  <div class="orbit">
    {skills.map((skill) => (
      <div class="skill">
        <img src={skill.src} alt={skill.alt} />
      </div>
    ))}
  </div>
</div>
