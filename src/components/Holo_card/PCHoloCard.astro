---
import PhotoCard from '../Holo_card/PhotoCard.jsx';
import Silk from '../Holo_card/silk.jsx';
import '../Holo_card/ProfileCard.css';
---

<style>
  .silk-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .page-container {
    position: relative;
    width: 100%;
    height: 100svh;
    overflow: hidden;
    background: transparent;
  }

  .card-wrapper {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<div class="page-container">
  <!-- Fondo Silk (montado en cliente) -->
  <div class="silk-bg">
    <Silk
      client:only="react"
      speed={5}
      scale={1}
      color="#7B7481"
      noiseIntensity={1.5}
      rotation={0}
    />
  </div>

  <!-- Tarjeta (montada en cliente también) -->
  <div class="card-wrapper">
    <PhotoCard
      client:only="react"
      avatarUrl="/img/Patrick_moño.png"
      name="Oscar Amaro"
      handle="oscar_amaro"
      status="Online"
      contactText="Contact me"
      onContactClick={() => alert('Gracias por contactarme')}
    />
  </div>
</div>
