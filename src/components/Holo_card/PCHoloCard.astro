---
import PhotoCard from '../Holo_card/PhotoCard.jsx';
import '../Holo_card/ProfileCard.css';
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;700&display=swap" rel="stylesheet" />
</head>

<div class="page-container">
  <div class="card-wrapper">
    <PhotoCard
      client:only="react"
      avatarUrl="/img/Patrick_moño.png"
      name="Oscar J. Amaro"
      handle="oscar_amaro"
      status="Online"
      contactText="Contact me"
      onContactClick={() => alert('Gracias por contactarme')}
    />
  </div>
</div>

<style>
    .page-container {
    width: 100%;
    max-width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    margin: 0 auto;
  }

  .card-wrapper {
    width: 100%;
    max-width: 400px;            /* ✅ Controla el ancho de la tarjeta si quieres */
    margin: 0 auto;              /* ✅ Centra horizontalmente */
    padding: 0;
  }

</style>
