---
import ProfileCard from './ProfileCard.jsx';
import '../components/ProfileCard.css'; // Asegúrate de que la ruta sea correcta

const avatarUrl = "/img/Patrick_moño.png"; // Ajusta el path según tu imagen 

---

<div class="flex justify-center items-center py-16">
  <ProfileCard 
    name="Oscar Amaro"
    title="Data Something | Actuary"
    handle="oscar_amaro"
    status="Online"
